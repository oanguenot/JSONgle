{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": ["airbnb-base"],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "quotes": [1, "double", "avoid-escape"],
        "indent": [0, 4],
        "no-console": [0],
        "no-underscore-dangle": [0],
        "class-methods-use-this": [0],
        "import/prefer-default-export": [0],
        "max-len": [0, 80]
    },
    "ignorePatterns": ["node_modules/*"]
}
